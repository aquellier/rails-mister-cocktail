<div class="container">
  <h1><%=  @cocktail.name%></h1>

  <% if @cocktail.doses.empty? %>
  <p>There's no ingredient recorded for this Cocktail. Feel free to add some !</p>
  <br>
  <% else %>
  Ingredients:
  <% end%>

    <% @cocktail.doses.each do |dose| %>
      <li class="list-inline list_items">
        <div class="flexing-stuff">
          <h3><strong><%= dose.ingredient.name%></strong> - <%= dose.description %></h3>
        </div>
      <%= link_to dose_path(dose), method: :delete, data: {
                    confirm: 'Are you sure?',
                    text: 'The dose will be definitely canceled',
                    'confirm-button-text': 'Yes, delete it!',
                    'cancel-button-text': 'Cancel',
                  } do %>
                  <i class="fa fa-trash"></i>
      <% end %>
      </li>
    <% end %>

  <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class:'btn btn-primary' %>
  <%= link_to "Back to list of cocktails", cocktails_path, class:"btn btn-danger" %>
</div>
